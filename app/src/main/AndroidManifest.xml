<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".SfmApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SfmAppV2"
        tools:targetApi="31">

        <activity
            android:name=".presentation.ui.home.listaevaluacion.EvaluacionesPorSemanaActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.home.listaevaluacion.ListaEvaluacionActivity"
            android:exported="false"
            android:theme="@style/Theme.SfmAppV2" />
        <activity
            android:name=".presentation.ui.home.evaluacion.EvaluacionActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.admin.areas.AreasActivity"
            android:exported="false"
            android:theme="@style/Theme.SfmAppV2" />
        <activity
            android:name=".presentation.ui.admin.usuarios.UsuariosActivity"
            android:exported="false"
            android:theme="@style/Theme.SfmAppV2" />
        <activity
            android:name=".presentation.ui.admin.operarios.OperariosActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.admin.cargos.CargosActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.crearcuenta.CrearCuentaActivity"
            android:exported="false"
            android:theme="@style/Theme.SfmAppV2" />
        <activity
            android:name=".presentation.ui.main.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.SfmAppV2.NoActionBar" />
        <activity
            android:name=".presentation.ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>