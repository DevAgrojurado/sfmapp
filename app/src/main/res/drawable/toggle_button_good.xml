<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#DEE800"/>
             <!-- Verde oscuro cuando está seleccionado -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#666666"/> <!-- Verde claro cuando no está seleccionado -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>