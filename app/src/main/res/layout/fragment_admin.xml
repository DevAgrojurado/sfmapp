<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2BFFFFFF"
    tools:context=".presentation.ui.admin.AdminFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_operario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:clickable="true"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:text=" Operarios"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cargo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:clickable="true"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:text=" Cargos"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_usuarios"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:clickable="true"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:shadowRadius="16"
                android:text=" Usuarios"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_areas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_background"
                android:clickable="true"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:shadowRadius="16"
                android:text=" Areas"
                android:textAlignment="gravity"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>